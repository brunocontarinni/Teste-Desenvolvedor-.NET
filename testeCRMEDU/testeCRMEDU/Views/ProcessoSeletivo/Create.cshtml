@using testeCRMEDU.Models.Dtos
@model ProcessoSeletivoDto
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Novo Processo Seletivo</h2>


        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Id">
                    <span asp-validation-for="Id" class="text-danger"> </span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Nome">
                    <span asp-validation-for="Nome" class="text-danger"> </span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Data Início</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DataInicio" />
                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Data Término</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DataTermino" />
                    <span asp-validation-for="DataTermino" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sml-u col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="ProcessoSeletivo" asp-action="Index" role="button">
                        Voltar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
