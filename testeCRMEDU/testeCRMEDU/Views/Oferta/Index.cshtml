@model List<Oferta>
@{
}

<h2 class="text-center mb-5">Lista de Ofertas</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Oferta" asp-action="Create">Nova Oferta</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Vagas Disponíveis</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id </td>
                <td>@item.Nome </td>
                <td>@item.Descricao</td>
                <td>@item.VagasDisponiveis</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Oferta" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Oferta" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
